{
    "name": "FastSimplePasswordManager",
    "version": "1.0",
    "manifest_version": 2,
    "description": "un simple gestionnaire de mot de passe",
    "icons": {
      "32": "icon/32x32.png",
      "192": "icon/192x192.png",
      "512": "icon/512x512.png"
    },
    "browser_action": {
      "default_title": "Fast Simple Password Manager",
      "default_popup": "popup.html"
    },
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": [
          "crypto-js.min.js",
          "logSavePsw.js",
          "main.js",
          "popup.js"
        ],
        "html": [
          "formSignin.html",
          "formLogin.html"
        ],
        "run_at": "document_end"
      }
    ]
  }
  